<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseFilth">
    <defName>VGE_Filth_Astrofuel</defName>
    <label>astrofuel puddle</label>
    <description>A puddle of flammable astrofuel.</description>
    <thingClass>LiquidFuel</thingClass>
    <useHitPoints>true</useHitPoints>
    <tickerType>Normal</tickerType>
    <statBases>
      <Beauty>-10</Beauty>
      <Cleanliness>-15</Cleanliness>
      <MaxHitPoints>150</MaxHitPoints>
      <Flammability>2.0</Flammability>
    </statBases>
    <graphicData>
      <texPath>Things/Filth/LiquidFuel</texPath>
      <color>(146,76,237)</color>
    </graphicData>
    <filth>
      <ignoreFilthMultiplierStat>true</ignoreFilthMultiplierStat>
      <disappearsInDays>35~40</disappearsInDays>
      <rainWashes>true</rainWashes>
      <cleaningWorkToReduceThickness>70</cleaningWorkToReduceThickness>
      <canFilthAttach>true</canFilthAttach>
      <maxThickness>1</maxThickness>
      <cleaningSound>Interact_CleanFilth_Fluid</cleaningSound>
    </filth>
  </ThingDef>

  <ThingDef ParentName="BaseFilth">
    <defName>VGE_Filth_DamagedSubstructure</defName>
    <label>damaged substructure debris</label>
    <description>Debris from damaged gravship substructure.</description>
    <statBases>
      <Beauty>-10</Beauty>
      <Cleanliness>-5</Cleanliness>
    </statBases>
    <graphicData>
      <texPath>Things/Filth/DamagedSubstructureFilth</texPath>
      <graphicClass>Graphic_Cluster</graphicClass>
      <onGroundRandomRotateAngle>360</onGroundRandomRotateAngle>
    </graphicData>
    <filth>
      <ignoreFilthMultiplierStat>true</ignoreFilthMultiplierStat>
      <disappearsInDays>45~50</disappearsInDays>
      <rainWashes>false</rainWashes>
      <cleaningWorkToReduceThickness>35</cleaningWorkToReduceThickness>
      <cleaningSound>Interact_CleanFilth</cleaningSound>
    </filth>
  </ThingDef>

</Defs>
